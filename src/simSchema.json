{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "StatePy Simulation",

    "definitions": {
        "state":{
            "type":"object",
            "properties": {
                "name": {
                    "type":"string"
                },
                "entry":{
                    "type":"string"
                },
                "during":{
                    "type":"string"
                },
                "exit":{
                    "type":"string"
                },
                "transitions":{
                    "type":"array",
                    "items": {
                        "type":"object",
                        "properties": {
                            "condition":{
                                "type":"string"
                            },
                            "destination":{
                                "type":"string"
                            },
                            "action":{
                                "type":"string"
                            }
                        },
                        "required": ["condition", "destination"]
                    }
                },
                "children":{
                    "type":"array",
                    "items": {
                        "$ref": "#/definitions/state"
                    }
                },
                "defaultchild":{
                    "type":"string"
                }
            },
            "required": ["name"]
        }
    },

    "properties": {
        "statemachines": {
            "description": "Definitions of any state machines that will be used",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "states": {
                        "type":"array",
                        "items":{
                            "type":"object",
                            "$ref": "#/definitions/state"
                        }
                    },
                    "defaultstate": {
                        "type": "string",
                        "description": "name of the default (initial) state for this state machine"
                    }
                },
                "required":["states", "defaultstate"]
            }
        },
        "loggers":{
            "description": "Connection information for logging simulation data to a database",
            "type":"array",
            "items": {
                "type":"object",
                "properties": {
                    "dbtype":{
                        "enum": ["mongo"]
                    },
                    "host": {
                        "type":"string",
                        "format": "hostname"
                    },
                    "port": {
                        "type":"integer"
                    },
                    "dbname": {
                        "type":"string"
                    },
                    "table": {
                        "type":"string"
                    }
                },
                "required": ["dbtype", "host", "dbname", "table"]
            }
        },
        "simulations": {
            "description": "Initialization data for parallel simulations",
            "type": "array",
            "items":{
                "type":"object",
                "properties": {
                    "statemachine":{
                        "type": "integer"
                    },
                    "initialdata": {
                        "type":"object"
                    },
                    "logger":{
                        "type":"integer"
                    }
                },
                "required": ["statemachine", "initialdata"]
            }
        },
        "modules": {
            "type":"object",
            "additionalProperties": {
                "type":"string"
            }
        }
    }
}